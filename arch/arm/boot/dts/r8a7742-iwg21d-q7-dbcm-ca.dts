#include "r8a7742-iwg21d-q7.dts"

/ {
	model = "iWave Systems RZ/G1H Qseven development platform with camera add-on";
	compatible = "iwave,g21d", "iwave,g21m", "renesas,r8a7742";

	aliases {
		serial0 = &scif0;
		serial1 = &scif1;
		serial3 = &scifb1;
		serial5 = &hscif0;
		ethernet1 = &ether;
	};
};

&avb {
	/* Pins shared with VIN0, keep status disabled */
	status = "disabled";
};

&can0 {
	pinctrl-0 = <&can0_pins>;
	pinctrl-names = "default";
	status = "okay";
};

&ether {
	pinctrl-0 = <&ether_pins>;
	pinctrl-names = "default";

	phy-handle = <&phy1>;
	renesas,ether-link-active-low;
	status = "okay";

	phy1: ethernet-phy@1 {
		reg = <1>;
		micrel,led-mode = <1>;
	};
};

&gpio0 {
	/* disable hogging GP0_18 to output LOW */
	/delete-node/ qspi_en;

	/* hog GP0_18 to output HIGH  to enable VIN2 */
	qspi_en {
		gpio-hog;
		gpios = <18 GPIO_ACTIVE_HIGH>;
		output-high;
		line-name = "VIN2_EN";
	};
};

&hscif0 {
	pinctrl-0 = <&hscif0_pins>;
	pinctrl-names = "default";
	uart-has-rtscts;
	status = "okay";
};

&i2c0 {
	ov5640@0 {
		compatible = "ovti,ov5640";
		reg = <0x3c>;
		remote = <&vin0>;

		port {
			ov5640_0: endpoint {
				bus-width = <8>;
				remote-endpoint = <&vin0ep>;
			};
		};
	};

	ov7725@0 {
		compatible = "ov772x";
		reg = <0x21>;
		remote = <&vin0>;

		/* mark OV7725 as disabled by default
		 * to enable, run command below under U-boot command line
		 * 	setenv vin0_camera 'ov7725'
		 * Note: no need to update status here
		 */
		status = "disabled";

		port {
			ov7725_0: endpoint {
				bus-width = <8>;
				remote-endpoint = <&vin0ep>;
			};
		};
	};
};

&i2c1 {
	pinctrl-0 = <&i2c1_pins>;
	pinctrl-names = "default";

	clock-frequency = <400000>;
	status = "okay";

	ov5640@1 {
		compatible = "ovti,ov5640";
		reg = <0x3c>;
		remote = <&vin1>;

		port {
			ov5640_1: endpoint {
				bus-width = <8>;
				remote-endpoint = <&vin1ep>;
			};
		};
	};

	ov7725@1 {
		compatible = "ov772x";
		reg = <0x21>;
		remote = <&vin1>;

		/* mark OV7725 as disabled by default
		 * to enable, run command below under U-boot command line
		 * 	setenv vin1_camera 'ov7725'
		 * Note: no need to update status here
		 */
		status = "disabled";

		port {
			ov7725_1: endpoint {
				bus-width = <8>;
				remote-endpoint = <&vin1ep>;
			};
		};
	};
};

&i2c2 {
	ov5640@2 {
		compatible = "ovti,ov5640";
		reg = <0x3c>;
		remote = <&vin2>;

		port {
			ov5640_2: endpoint {
				bus-width = <8>;
				remote-endpoint = <&vin2ep>;
			};
		};
	};

	ov7725@2 {
		compatible = "ov772x";
		reg = <0x21>;
		remote = <&vin2>;

		/* mark OV7725 as disabled by default
		 * to enable, run command below under U-boot command line
		 * 	setenv vin2_camera 'ov7725'
		 * Note: no need to update status here
		 */
		status = "disabled";

		port {
			ov7725_2: endpoint {
				bus-width = <8>;
				remote-endpoint = <&vin2ep>;
			};
		};
	};
};

&i2c3 {
	pinctrl-0 = <&i2c3_pins>;
	pinctrl-names = "default";

	clock-frequency = <400000>;
	status = "okay";

	ov5640@3 {
		compatible = "ovti,ov5640";
		reg = <0x3c>;
		remote = <&vin3>;

		port {
			ov5640_3: endpoint {
				bus-width = <8>;
				remote-endpoint = <&vin3ep>;
			};
		};
	};

	ov7725@3 {
		compatible = "ov772x";
		reg = <0x21>;
		remote = <&vin3>;

		/* mark OV7725 as disabled by default
		 * to enable, run command below under U-boot command line
		 * 	setenv vin3_camera 'ov7725'
		 * Note: no need to update status here
		 */
		status = "disabled";

		port {
			ov7725_3: endpoint {
				bus-width = <8>;
				remote-endpoint = <&vin3ep>;
			};
		};
	};
};


&pfc {
	can0_pins: can0 {
		groups = "can0_data_d";
		function = "can0";
	};

	ether_pins: ether {
		groups = "eth_mdio", "eth_rmii";
		function = "eth";
	};

	hscif0_pins: hscif0 {
		groups = "hscif0_data", "hscif0_ctrl";
		function = "hscif0";
	};

	i2c1_pins: i2c1 {
		groups = "i2c1_c";
		function = "i2c1";
	};

	i2c3_pins: i2c3 {
		groups = "i2c3";
		function = "i2c3";
	};

	pwm0_pins: pwm0 {
		groups = "pwm0";
		function = "pwm0";
	};

	pwm3_pins: pwm3 {
		groups = "pwm3";
		function = "pwm3";
	};

	pwm4_pins: pwm4 {
		groups = "pwm4";
		function = "pwm4";
	};

	pwm5_pins: pwm5 {
		groups = "pwm5";
		function = "pwm5";
	};

	pwm6_pins: pwm6 {
		groups = "pwm6";
		function = "pwm6";
	};

	scif0_pins: scif0 {
		groups = "scif0_data";
		function = "scif0";
	};

	scif1_pins: scif1 {
		groups = "scif1_data";
		function = "scif1";
	};

	scifb1_pins: scifb1 {
		groups = "scifb1_data";
		function = "scifb1";
	};

	vin0_pins: vin0 {
		groups = "vin0_data8", "vin0_clk";
		function = "vin0";
	};

	vin1_pins: vin1 {
		groups = "vin1_data8", "vin1_clk_b";
		function = "vin1";
	};

	vin2_pins: vin2 {
		groups = "vin2_data8", "vin2_clk";
		function = "vin2";
	};

	vin3_pins: vin3 {
		groups = "vin3_data8", "vin3_clk";
		function = "vin3";
	};
};

&pwm0 {
	pinctrl-0 = <&pwm0_pins>;
	pinctrl-names = "default";

	status = "okay";
};

&pwm3 {
	pinctrl-0 = <&pwm3_pins>;
	pinctrl-names = "default";

	status = "okay";
};

&pwm4 {
	pinctrl-0 = <&pwm4_pins>;
	pinctrl-names = "default";

	status = "okay";
};

&pwm5 {
	pinctrl-0 = <&pwm5_pins>;
	pinctrl-names = "default";

	status = "okay";
};

&pwm6 {
	pinctrl-0 = <&pwm6_pins>;
	pinctrl-names = "default";

	status = "okay";
};

&qspi {
	/* Pins shared with VIN2, keep status disabled */
	status = "disabled";
};

&scif0 {
	pinctrl-0 = <&scif0_pins>;
	pinctrl-names = "default";
	status = "okay";
};

&scif1 {
	pinctrl-0 = <&scif1_pins>;
	pinctrl-names = "default";
	status = "okay";
};

&scifb1 {
	pinctrl-0 = <&scifb1_pins>;
	pinctrl-names = "default";
	status = "okay";

	rts-gpios = <&gpio4 21 GPIO_ACTIVE_LOW>;
	cts-gpios = <&gpio4 17 GPIO_ACTIVE_LOW>;
};

&vin0 {
	status = "okay";
	pinctrl-0 = <&vin0_pins>;
	pinctrl-names = "default";

	port {
		#address-cells = <1>;
		#size-cells = <0>;

		vin0ep: endpoint {
			remote-endpoint = <&ov5640_0>;
			bus-width = <8>;
		};
	};
};

&vin1 {
	status = "okay";
	pinctrl-0 = <&vin1_pins>;
	pinctrl-names = "default";

	port {
		#address-cells = <1>;
		#size-cells = <0>;

		vin1ep: endpoint {
			remote-endpoint = <&ov5640_1>;
			bus-width = <8>;
		};
	};
};

&vin2 {
	status = "okay";
	pinctrl-0 = <&vin2_pins>;
	pinctrl-names = "default";

	port {
		#address-cells = <1>;
		#size-cells = <0>;

		vin2ep: endpoint {
			remote-endpoint = <&ov5640_2>;
			bus-width = <8>;
			ycbcr_8b_g_enable;
		};
	};
};

&vin3 {
	status = "okay";
	pinctrl-0 = <&vin3_pins>;
	pinctrl-names = "default";

	port {
		#address-cells = <1>;
		#size-cells = <0>;

		vin3ep: endpoint {
			remote-endpoint = <&ov5640_3>;
			bus-width = <8>;
		};
	};
};
